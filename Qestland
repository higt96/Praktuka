// Praktuka.cpp: определяет точку входа для консольного приложения.
//

#include "stdafx.h"
#include <iostream>
#include <conio.h>
#include <string.h>
#include <fstream>
#include <string>


using namespace std;
string str;

void tex(int n){//зчитує рядок N
	
		 setlocale(0, "");

		 ifstream in("input.txt"); // Відкрити файл для читання

		 
		 for (int i = 1; i < n; i++) // пропускаемо n - 1 рядка
			 in.ignore(255, '\n');

		 if (!in.eof()) // якщо не кінуць файла
		 {
			 getline(in, ::str); // зчитати потрібний рядок
		 }

		 in.close(); //закрти  файл

		
	 }

int main()
{
	
	setlocale(LC_ALL, "Russian");
Begi:;
	int V;//нажата клавіша
	int k = 0;///кирка
	int m = 0; //мотузка
	int key = 0;//ключ
	int l = 0; //ліхтарик

	

	tex(1);
	cout << ::str << endl;
	tex(2);
	cout << ::str << endl;
	tex(3);
	cout << ::str << endl;
	tex(24);
	cout << ::str << endl;

Proval:;////////////////////////////////////Провал
	
	V = _getch(); //нажаття клавіші
	switch (V)
	{
	case '1':
		if (key == 1 & k!=1)
		{
			tex(30);
			cout << ::str << endl;		}
		if (k==1)
		{
			tex(31);
			cout << ::str << endl;
			goto End;
		}
		else
		{
			tex(4);
			cout << ::str << endl;
			goto Proval;
		}
	case '2':
		tex(12);
		cout << ::str << endl;
		goto Proval;
	case '3':
		tex(5);
		cout << ::str << endl;
		goto Proval;
	case '4':
		tex(5);
		cout << ::str << endl;
		goto Proval;
	case '5':
		tex(6);
		cout << ::str << endl;
		goto Proval;

	case '6':
		tex(11);
		cout << ::str << endl;
		goto Potik;
	case '7':
		tex(7);
		cout << ::str << endl;
		goto Proval;
	case '8':
		if (k == 1)
		{
			tex(8);
			cout << ::str << endl; goto End;
		}
		else {

			tex(9);
			cout << ::str << endl;
			goto Proval;
		}
	case '9':
		tex(10);
		cout << ::str << endl;
		goto Proval;
	default:
		cout << "Невiрна команда" << endl;
		goto Proval;
	}
		///////////////////////////////////////////потік
	Potik:;
		V = _getch(); //нажаття клавіші
		switch (V)
		{
		case '1':
			tex(13);
			cout << ::str << endl;
			goto Potik;
		case '2':
			tex(19);
			cout << ::str << endl;
			goto Potik;
		case '3':
			tex(18);
			cout << ::str << endl;
			goto Vopad;
		case '4':
			tex(17);
			cout << ::str << endl;
			goto Cor;
		case '5':
			tex(15);
			cout << ::str <<"Провал"<< endl;
			goto Proval;

		case '6':
			tex(5);
			cout << ::str << endl;
			goto Potik;
		case '7':
			tex(7);
			cout << ::str << endl;
			goto Potik;
		case '8':
			tex(16);
			cout << ::str << endl;
			goto Potik;

		case '9':
			tex(10);
			cout << ::str << endl;
			goto Potik;
		default:
			cout << "Невiрна команда" << endl;
			goto Potik;
		}

	Cor:;////////////////////////коридор
		V = _getch(); //нажаття клавіші
		switch (V)
		{
		case '1':
			tex(13);
			cout << ::str << endl;
			goto Cor;
		case '2':
			if (l == 1)
			{
				tex(23);
				cout << ::str << endl;
			}
			else
			{
				tex(20);
				cout << ::str << endl;
			}
			goto Cor;
		case '3':
			tex(5);
			cout << ::str << endl;
			goto Cor;
		case '4':
			tex(5);
			cout << ::str << endl;
			goto Cor;
		case '5':
			tex(15);
			cout << ::str <<"Потiчок"<< endl;
			goto Potik;

		case '6':
			tex(21);
			cout << ::str << endl;
			goto G_O;
		case '7':
			tex(22);
			cout << ::str << endl;
			l = 1;
			goto Cor;
		case '8':
			tex(25);
			cout << ::str << endl;
			goto Jama;

		case '9':
			tex(10);
			cout << ::str << endl;
			goto Cor;
		default:
			cout << "Невiрна команда" << endl;
			goto Cor;
		}
	
	Jama:;////////////////////////////////////////////////////////Яма
		V = _getch(); //нажаття клавіші
		switch (V)
		{
		case '1':
			tex(13);
			cout << ::str << endl;
			goto Jama;
		case '2':
			tex(27);
			cout << ::str << endl;
			goto Jama;
		case '3':
			tex(5);
			cout << ::str << endl;
			goto Jama;
		case '4':
			tex(5);
			cout << ::str << endl;
			goto Jama;
		case '5':
			tex(15);
			cout << ::str <<"Потiчок"<< endl;
			goto Potik;

		case '6':
			tex(5);
			cout << ::str << endl;
			goto Jama;
		case '7':
			tex(24);
			cout << ::str << endl;
			goto Jama;
		case '8':
			tex(16);
			cout << ::str << endl;
			goto Jama;

		case '9':
			tex(28);
			cout << ::str << endl;
			key = 1;
			m = 1;
			goto Jama;
		default:
			cout << "Невiрна команда" << endl;
			goto Jama;
		}

	Vopad:;//////////////////////////////////верх водопаду
		V = _getch(); //нажаття клавіші
		switch (V)
		{
		case '1':
			tex(13);
			cout << ::str << endl;
			goto Vopad;
		case '2':
			tex(29);
			cout << ::str << endl;
			goto Vopad;
		case '3':
			tex(5);
			cout << ::str << endl;
			goto Vopad;
		case '4':
			tex(5);
			cout << ::str << endl;
			goto Vopad;
		case '5':
			tex(15);
			cout << ::str << "Потiчок" << endl;
			goto Potik;

		case '6':
			tex(32);
			cout << ::str << endl;
			goto G_O;
		case '7':
			tex(7);
			cout << ::str << endl;
			goto Vopad;
		case '8':
			if (m == 1)
			{
				tex(33);
					cout << ::str << endl;
					goto Dvopad;
			}
			else {
				tex(34);
				cout << ::str << endl;

				goto Vopad;
			}

		case '9':
			tex(10);
			cout << ::str << endl;
			goto Vopad;
		default:
			cout << "Невiрна команда" << endl;
			goto Vopad;
		}
	Dvopad:;/////////////////////////////////////низ водопаду.
		V = _getch(); //нажаття клавіші
		switch (V)
		{
		case '1':
			tex(13);
			cout << ::str << endl;
			goto Dvopad;
		case '2':
			tex(38);
			cout << ::str << endl;
			goto Dvopad;
		case '3':
			tex(36);
			cout << ::str << endl;
			goto G_O;
		case '4':
			tex(36);
			cout << ::str << endl;
			goto G_O;
		case '5':
			tex(15);
			cout << ::str << "Потiчок" << endl;
			goto Potik;

		case '6':
			tex(37);
			cout << ::str << endl;
			goto End;
		case '7':
			tex(7);
			cout << ::str << endl;
			goto Dvopad;
		case '8':
			tex(16);
			cout << ::str << endl;
			goto Dvopad;

		case '9':
			tex(35);
			cout << ::str << endl;
			k = 1;
			goto Dvopad;
		default:
			cout << "Невiрна команда" << endl;
			goto Dvopad;
		}

	G_O:;
		tex(39);
		cout << ::str << endl;
		tex(40);
		cout << ::str << endl;
		V = _getch(); //нажаття клавіші
		if (V == '1')
			goto Begi;
		else exit(0);



	End:;
		tex(41);
		cout << ::str << endl;
		tex(40);
		cout << ::str << endl;
		V = _getch(); //нажаття клавіші
		if (V == '1')
			goto Begi;
		else exit(0);

	
	system("pause");
	
	return 0;
}

